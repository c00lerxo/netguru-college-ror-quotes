<%= form_with(model: quote, local: true) do |form| %>
  <div class="actions">

    <div class="row">
      <div class="col-sm-12 col-centered">
        <%= form.label 'Quote' %>
        <%= render 'error', quote: quote, symbol: :content %>
        <%= form.text_area :content, rows: "10", class: 'form-control' %>

      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-centered">
        <%= form.label :author %>
        <%= render 'error', quote: quote, symbol: :author %>
        <%= form.text_field :author, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-centered">
        <%= form.submit "Add quote", class: 'btn btn-success' %>
      </div>
    </div>

  </div>
<% end %>
