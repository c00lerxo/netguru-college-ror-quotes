<section id="quotes">
  <div class="row">
  <% @quotes.each do |quote| %>
    <div class="col-sm-4">
      <%= link_to quote do %>
        <%= render 'quote', quote: quote %>
      <% end %>
    </div>
  <% end %>
  </div>
</section>

<div class="row">
  <div class="col-sm-2 col-centered">
    <%= button_to 'Add Quote',  new_quote_path, method: :get, class: "btn btn-success btn-lg" %>
  </div>
</div>
