<section id="quotes">
  <div class="row">
  <% @quotes.each do |quote| %>
    <div class="col-sm-4">
      <%= link_to quote do %>
            <div class="quote">
              <%= remove_quote_mark add_whitespace_to_long_string quote.content %>
              <span class="author">
                <%= quote.author %>
              </span>
            </div>
      <% end %>
    </div>
  <% end %>
  </div>
</section>

<div class="row">
  <div id="add">
    <%= button_to 'Add Quote',  new_quote_path, method: :get, class: "btn btn-success btn-lg" %>
  </div>
</div>
